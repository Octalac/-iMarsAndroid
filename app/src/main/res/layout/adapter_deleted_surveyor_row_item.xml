<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_margin="@dimen/_10sdp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/rlSurveyorView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.os.imars.custom.CircleImageView
                android:id="@+id/imvSurveyor"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/chat_user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/llForwordArrow"
                android:layout_toRightOf="@+id/imvSurveyor"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:singleLine="true"
                    android:text="Royal Caribbean"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imvMobile"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/telephone" />

                    <TextView
                        android:id="@+id/txtMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="902-23450-234"
                        android:textColor="@color/grey_800"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/email" />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="angetsmail@gmail.com"
                        android:textColor="@color/grey_800"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>
