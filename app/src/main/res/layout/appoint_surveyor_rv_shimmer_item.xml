<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        shimmer:duration="2000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/_10sdp">

                <View
                    android:id="@+id/imgProduct"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/bg_round_grey_shimmer" />

                <LinearLayout
                    android:id="@+id/lLTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/imgProduct"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">

                    <RelativeLayout
                        android:id="@+id/rlTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/imvOffer"
                            android:orientation="vertical">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <View
                                    android:layout_width="@dimen/_180sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:background="@color/shimmerViewColor" />


                            </LinearLayout>


                            <View
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/shimmerViewColor" />

                            <View
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/shimmerViewColor" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/imvOffer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">


                            <View
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:background="@color/shimmerViewColor"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textSize="@dimen/_12sdp" />

                            <View
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@color/shimmerViewColor"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/_20sdp"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/_10sdp">

                <View
                    android:id="@+id/imgProduct1"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/bg_round_grey_shimmer" />

                <LinearLayout
                    android:id="@+id/lLTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/imgProduct1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">

                    <RelativeLayout
                        android:id="@+id/rlTitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <View
                                    android:layout_width="@dimen/_180sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:background="@color/shimmerViewColor" />


                            </LinearLayout>

                            <View
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:background="@color/shimmerViewColor" />

                            <View
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/shimmerViewColor" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/imvOffer1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:background="@color/shimmerViewColor"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textSize="@dimen/_12sdp" />


                            <View
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@color/shimmerViewColor"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/_20sdp"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>




            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/_10sdp">

                <View
                    android:id="@+id/imgProduct3"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/bg_round_grey_shimmer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/imgProduct3"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">

                    <RelativeLayout
                        android:id="@+id/rlTitle4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <View
                                    android:layout_width="@dimen/_180sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:background="@color/shimmerViewColor" />


                            </LinearLayout>

                            <View
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:background="@color/shimmerViewColor" />

                            <View
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/shimmerViewColor" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/imvOffer4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:background="@color/shimmerViewColor"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textSize="@dimen/_12sdp" />



                            <View
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@color/shimmerViewColor"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/_20sdp"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/_10sdp">

                <View
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/shimmerViewColor" />

                <View
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/shimmerViewColor" />


            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="@dimen/_10sdp">

                    <View
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/shimmerViewColor" />

                    <View
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="@dimen/_300sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:background="@color/shimmerViewColor" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="@dimen/_10sdp">

                    <View
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/shimmerViewColor" />

                    <View
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@color/shimmerViewColor" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="@dimen/_10sdp">

                    <View
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/shimmerViewColor" />

                    <View
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="@dimen/_400sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/shimmerViewColor" />


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>