<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/rlDetailsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlVesselsView"
                android:layout_width="@dimen/_60sdp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_height="@dimen/_60sdp">

                <com.os.imars.custom.CircleImageView
                    android:id="@+id/imvVessels"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/vessels_unselect" />

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgFav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heart_unselected"/>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/heart"/>


                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/llForwordArrow"
                android:layout_toRightOf="@+id/rlVesselsView"
                android:paddingLeft="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/llAppoint"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Royal Caribbean Vessels"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="fdfasfdfdfdsafsd"
                            android:id="@+id/txtIMO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/grey_800"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:id="@+id/llAppoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center">

                    <com.os.imars.custom.CircleImageView
                        android:id="@+id/imgAppoint"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/vessels_logo_icon" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llForwordArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:gravity="center">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/imvForwordArrow"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
