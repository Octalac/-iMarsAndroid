<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/rlDetailsView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp">

            <com.os.imars.custom.CircleImageView
                android:id="@+id/imvSurveyUser"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/user_icon" />

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/imvSurveyUser"
                android:paddingLeft="@dimen/_10sdp">

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:singleLine="true"
                        android:text="Royal Caribbean"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_gravity="center"
                                    android:id="@+id/txtPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:text="$12"
                                    android:textColor="@color/grey_500"
                                    android:textSize="@dimen/_10sdp" />


                                <RatingBar
                                    android:theme="@style/RatingBar"
                                    android:id="@+id/ratingBar"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:text="Job acceptance :"
                                    android:textColor="@color/grey_500"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/txtJobAcceptance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:text="50%"
                                    android:textColor="@color/baseColor"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center">


                            <TextView
                                android:visibility="gone"
                                android:id="@+id/txtSurveyStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_blue_fill_color"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="Primary"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp" />

                            <CheckBox
                                android:id="@+id/chkStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="Avg. Response :"
                            android:textColor="@color/grey_500"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/txtAvgResponse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="5hr 30min."
                            android:textColor="@color/baseColor"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
